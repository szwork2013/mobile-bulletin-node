extends layout

block content

    .app
      // top header
      header.header.header-fixed.navbar
        .brand
          // toggle offscreen menu
          a.ti-menu.off-left.visible-xs(href='javascript:;', data-toggle='offscreen', data-move='ltr')
          // /toggle offscreen menu
          // logo
          a.navbar-brand(href='index.html')
            img(src='img/logo.png', alt='')
            span.heading-font
              | Mobile Bulletin
          // /logo
        ul.nav.navbar-nav
          li.hidden-xs
            // toggle small menu
            a.toggle-sidebar(href='javascript:;')
              i.ti-menu
            // /toggle small menu
          li.header-search
            // toggle search
            a.toggle-search(href='javascript:;')
              i.ti-search
            // /toggle search
            .search-container
              form(role='search')
                input.form-control.search(type='text', placeholder='type and press enter')
        ul.nav.navbar-nav.navbar-right
          li.off-right
            a(href='javascript:;', data-toggle='dropdown')
                #user
                    img.header-avatar.img-circle(src='img/faceless.jpg', alt='user', title='user')
                    span.hidden-xs.ml10 #{user.company} 
                    i.ti-angle-down.ti-caret.hidden-xs
            ul.dropdown-menu
              li
                a(href='/admin/settings') Settings
              li
                a(href='/admin/support') Help
              li
                a(href='/admin/signout') Logout
      // /top header
      section.layout
        // sidebar menu
        aside.sidebar.offscreen-left
          // main navigation
          nav.main-navigation(data-height='auto', data-size='6px', data-distance='0', data-rail-visible='true', data-wheel-step='10')
            p.nav-title MENU
            ul.nav
              // dashboard
              li
                a(href='index.html')
                  i.ti-home
                  span Dashboard
              // /dashboard
              li
                a(href='index.html')
                  i.ti-email
                  span Messages
              li
                a(href='index.html')
                  i.ti-user
                  span Employees
              li
                a(href='index.html')
                  i.ti-briefcase
                  span Departments
              li
                a(href='index.html')
                  i.ti-help-alt
                  span Support
              li
                a(href='index.html')
                  i.ti-settings
                  span Settings
        // /sidebar menu
        // main content
        section.main-content
          // content wrapper
          .content-wrap
            // inner content wrapper
            .wrapper
              ol.breadcrumb
                li
                  a(href='javascript:;') Mobile Bulletin
                li.active Settings
              section.panel
                header.panel-heading Settings
                .panel-body
                  form.form-horizontal(role='form')
                    .col-md-12
                      .form-group
                        label.col-sm-2.control-label Company Name
                        .col-sm-10
                          input.form-control(type='text')
                    .col-md-12
                      .form-group
                        label.col-sm-2.control-label Website
                        .col-sm-10
                          input.form-control(type='text')
                    .col-md-12
                      .form-group
                        label.col-sm-2.control-label Email
                        .col-sm-10
                          input.form-control(type='text')
                    .col-md-12
                      .form-group
                        label.col-sm-2.control-label Telephone
                        .col-sm-10
                          input.form-control(type='text')
                    .col-md-12
                      button.btn.btn-default.pull-right(type='submit') Save
            // /inner content wrapper
          // /content wrapper
          a.exit-offscreen
        // /main content