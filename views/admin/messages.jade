extends layout

block content

    .app
      // top header
      header.header.header-fixed.navbar
        .brand
          // toggle offscreen menu
          a.ti-menu.off-left.visible-xs(href='javascript:;', data-toggle='offscreen', data-move='ltr')
          // /toggle offscreen menu
          // logo
          a.navbar-brand(href='index.html')
            img(src='img/logo.png', alt='')
            span.heading-font
              | Mobile Bulletin
          // /logo
        ul.nav.navbar-nav
          li.hidden-xs
            // toggle small menu
            a.toggle-sidebar(href='javascript:;')
              i.ti-menu
            // /toggle small menu
          li.header-search
            // toggle search
            a.toggle-search(href='javascript:;')
              i.ti-search
            // /toggle search
            .search-container
              form(role='search')
                input.form-control.search(type='text', placeholder='type and press enter')
        ul.nav.navbar-nav.navbar-right
          li.off-right
            a(href='javascript:;', data-toggle='dropdown')
                #user
                    img.header-avatar.img-circle(src='img/faceless.jpg', alt='user', title='user')
                    span.hidden-xs.ml10 #{user.company} 
                    i.ti-angle-down.ti-caret.hidden-xs
            ul.dropdown-menu
              li
                a(href='/admin/settings') Settings
              li
                a(href='/admin/support') Help
              li
                a(href='/admin/signout') Logout
      // /top header
      section.layout
        // sidebar menu
        aside.sidebar.offscreen-left
          // main navigation
          nav.main-navigation(data-height='auto', data-size='6px', data-distance='0', data-rail-visible='true', data-wheel-step='10')
            p.nav-title MENU
            ul.nav
              // dashboard
              li
                a(href='/admin/dashboard')
                  i.ti-home
                  span Dashboard
              // /dashboard
              li
                a(href='/admin/messages')
                  i.ti-email
                  span Messages
              li
                a(href='/admin/employees')
                  i.ti-user
                  span Employees
              li
                a(href='/admin/groups')
                  i.ti-briefcase
                  span Groups
              li
                a(href='/admin/support')
                  i.ti-help-alt
                  span Support
              li
                a(href='/admin/settings')
                  i.ti-settings
                  span Settings
        // /sidebar menu
        // main content
        section.main-content
          // content wrapper
          .content-wrap
            // inner content wrapper
            .wrapper
              ol.breadcrumb
                li
                  a(href='javascript:;') Mobile Bulletin
                li.active Messages
              section.panel
                header.panel-heading Create New Message
                .panel-body
                  form.form-horizontal(role='form', action='/admin/messages', method="POST")
                    .col-md-12
                      .form-group
                        div(style='padding-left: 15px; padding-right: 15px;')
                            label(for='group') Group
                            select.form-control(name='group')
                    .col-md-12
                      .form-group
                        div(style='padding-left: 15px; padding-right: 15px;')
                          label(for='content') English Message
                          textarea.form-control(rows='2', name='english_content')
                    .col-md-12
                      .form-group
                        div(style='padding-left: 15px; padding-right: 15px;')
                          label(for='content') Zulu Message
                          textarea.form-control(rows='2', name='zulu_content')
                    .col-md-12
                      .form-group
                        div(style='padding-left: 15px; padding-right: 15px;')
                          label(for='content') Sotho Message
                          textarea.form-control(rows='2', name='sotho_content')
                    .col-md-12
                      button.btn.btn-default.pull-right(type='submit') Send Message
              section.panel.panel-default
                header.panel-heading
                  h5 Messages
                .panel-body
                  .table-responsive.no-border
                    table.table.table-bordered.table-striped.mg-t.datatable.messages-datatable
                      thead
                        tr
                          th Date
                          th English
                          th Zulu
                          th Sotho
                          th Group
            // /inner content wrapper
          // /content wrapper
          a.exit-offscreen
        // /main content